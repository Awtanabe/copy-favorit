<h1>DM</h1>

<h4>参加者</h4>
<% @entries.each do |e| %>
  <h5><strong><a href="/users/<%= e.user.id %>"><%= e.user.email%>さん</a></strong></h5>
<% end %>

<hr>
<p id="message">
  <% if @messages.present? %>

   <div id="message-container">
      <% @messages.each do |m| %>
        <strong><%= m.message %></strong>
        <small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.email %>さん</a></strong></small>
        <hr>
      <%end%>
    </div>

  <% else %>
    <h3 class="text-center">メッセージはまだありません</h3>
  <% end %>
</p>
   <%= form_with model: @message, remote: true do |f| %>
   
    <%= f.text_field :message, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
    <%= f.hidden_field :room_id, :value => @room.id %>
    <br>
    <%= f.submit "投稿する" %>
  <% end %> 


 
