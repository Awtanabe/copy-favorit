<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <div id="post_<%= post.id %>">
          <%= render 'post', post: post %>
        </div>
    　</tr>
    <% end %>
  </tbody>
</table>

